{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", ".next", "out", "dist", "build", "dev", "public"]
}
